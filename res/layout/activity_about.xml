<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_about"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:src="@drawable/about" />


    <TextView
        android:id="@+id/tv_desc01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_about"
        android:layout_centerHorizontal="true"
        android:paddingTop="3dp"
        android:text="本软件完全免费，仅供学习之用！"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_gitaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc01"
        android:layout_centerHorizontal="true"
        android:text="https://github.com/thiscoders/android_rssparser.git" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gitaddr"
        android:layout_centerHorizontal="true"
        android:text="(github地址)" />

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        android:text="版权所有，翻版必究" />

    <TextView
        android:id="@+id/tv_desc02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_copyright"
        android:layout_centerHorizontal="true"
        android:text="程序内容由腾讯网RSS聚合频道提供"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc02"
        android:layout_centerHorizontal="true"
        android:text="(网址:http://rss.qq.com/)" />

</RelativeLayout>